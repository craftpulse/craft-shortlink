{% import "_includes/forms" as forms %}
{% set shortLinkBase = field.shortLinkBase %}

{{ forms.textField({
        instructions: 'Shortlink for this page: ' ~ shortLinkBase ~ value,
        required: true,
        id: name,
        class: 'nicetext code',
        name: name,
        value: value,
        code: true
    })
}}